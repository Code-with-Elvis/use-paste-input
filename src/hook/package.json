{
  "name": "use-paste-input",
  "version": "1.0.0",
  "description": "A lightweight, type-safe React hook for handling paste events with validation",
  "type": "module",
  "main": "./dist/usePaste.cjs",
  "module": "./dist/usePaste.js",
  "types": "./dist/usePaste.d.ts",
  "exports": {
    ".": {
      "types": "./dist/usePaste.d.ts",
      "import": "./dist/usePaste.js",
      "require": "./dist/usePaste.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "hook",
    "paste",
    "clipboard",
    "validation",
    "typescript",
    "react-hook"
  ],
  "author": "Elvis Okumu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Code-with-Elvis/use-paste-input"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "react": "^19.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  }
}
